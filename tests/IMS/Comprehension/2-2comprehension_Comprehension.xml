      <item ident="q_0" title="Rejoindre le réseau">
        <itemmetadata>
          <qtimetadata>
            <qtimetadatafield>
              <fieldlabel>cc_profile</fieldlabel>
              <fieldentry>cc.multiple_response.v0p1</fieldentry>
            </qtimetadatafield>
            <qtimetadatafield>
              <fieldlabel>cc_question_category</fieldlabel>
              <fieldentry>Quiz Bank Compréhension</fieldentry>
            </qtimetadatafield>
          </qtimetadata>
        </itemmetadata>
        <presentation>
          <material>
            <mattext texttype="text/html">&lt;p&gt; Lorsqu'un ordinateur rejoint un réseau, que doit-ilobtenir pour rejoindre internet ?&lt;/p&gt;</mattext>
          </material>
          <response_lid ident="response_0cf2fe89-4b8c-4702-8292-5b8d462eecb0" rcardinality="Multiple">
            <render_choice shuffle="No">
              <response_label ident="answer_0cf2fe89-4b8c-4702-8292-5b8d462eecb0_0">
                <material>
                  <mattext texttype="text/html">Une adresseIP.</mattext>
                </material>
              </response_label>
              <response_label ident="answer_0cf2fe89-4b8c-4702-8292-5b8d462eecb0_1">
                <material>
                  <mattext texttype="text/html">Un nom de code.</mattext>
                </material>
              </response_label>
              <response_label ident="answer_0cf2fe89-4b8c-4702-8292-5b8d462eecb0_2">
                <material>
                  <mattext texttype="text/html">Une autorisation de l'État ?</mattext>
                </material>
              </response_label>
              <response_label ident="answer_0cf2fe89-4b8c-4702-8292-5b8d462eecb0_3">
                <material>
                  <mattext texttype="text/html">L'adresse d'un serveur de noms.</mattext>
                </material>
              </response_label>
              <response_label ident="answer_0cf2fe89-4b8c-4702-8292-5b8d462eecb0_4">
                <material>
                  <mattext texttype="text/html">L'adresse d'un routeur.</mattext>
                </material>
              </response_label>
              <response_label ident="answer_0cf2fe89-4b8c-4702-8292-5b8d462eecb0_5">
                <material>
                  <mattext texttype="text/html">L'accès à un moteur de recherche.</mattext>
                </material>
              </response_label>
            </render_choice>
          </response_lid>
        </presentation>
        <resprocessing>
          <outcomes>
